#include <iostream>
using namespace std;

class Complex {
private:
    double real, imag;

public:
    Complex() {
        real = 0;
        imag = 0;
    }

    Complex(double r) {
        real = r;
        imag = 0;
    }

    Complex(double r, double i) {
        real = r;
        imag = i;
    }

    void display() {
        cout << real;
        if (imag >= 0) {
            cout << " + " << imag << "i";
        } else {
            cout << " - " << -imag << "i";  
        }
        cout << endl;
    }
};
int main() {
    Complex c1;
    cout << "Complex Number 1 (default constructor): ";
    c1.display();

    Complex c2(5.0);
    cout << "Complex Number 2 (real part only): ";
    c2.display();

    Complex c3(3.0, 4.0);
    cout << "Complex Number 3 (both real and imaginary parts): ";
    c3.display();

    return 0;
}
