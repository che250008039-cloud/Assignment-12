#include <iostream>
using namespace std;

class Box {
private:
    double length, breadth, height;

public:
    Box() {
        length = 1;
        breadth = 1;
        height = 1;
    }

    Box(double l) {
        length = l;
        breadth = 1;
        height = 1;
    }

    Box(double l, double b, double h) {
        length = l;
        breadth = b;
        height = h;
    }

    void displayVolume() {
        double volume = length * breadth * height;
        cout << "Volume of Box: " << volume << endl;
    }
};
int main() {
    Box box1;              
    Box box2(5.0);      
    Box box3(3.0, 4.0, 2.0);

    cout << "Box 1 (Default constructor): ";
    box1.displayVolume();

    cout << "Box 2 (One value constructor): ";
    box2.displayVolume();

    cout << "Box 3 (Three values constructor): ";
    box3.displayVolume();

    return 0;
}
